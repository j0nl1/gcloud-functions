{
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
      ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": ["tsconfig.json"],
      "sourceType": "module"
    },
    "ignorePatterns": [
      "/lib/**/*"
    ],
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "quotes": ["error", "double"],
      "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
    }
}
  